{
  "name": "remembrance-oracle-toolkit",
  "version": "3.1.0",
  "description": "Code memory system â€” stores only proven code (passes validation + coherency), scores everything 0-1, and serves the most relevant patterns to any AI or developer.",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./src/index.js",
      "types": "./types/index.d.ts"
    },
    "./oracle": "./src/api/oracle.js",
    "./coherency": "./src/core/coherency.js",
    "./covenant": "./src/core/covenant.js",
    "./validator": "./src/core/validator.js",
    "./relevance": "./src/core/relevance.js",
    "./patterns": "./src/patterns/library.js",
    "./sandbox": "./src/core/sandbox.js",
    "./mcp": "./src/mcp/server.js",
    "./dashboard": "./src/dashboard/server.js",
    "./auth": "./src/auth/auth.js",
    "./debug": "./src/debug/debug-oracle.js",
    "./plugins": "./src/plugins/manager.js",
    "./health": "./src/health/monitor.js",
    "./swarm": "./src/swarm/index.js"
  },
  "bin": {
    "remembrance-oracle": "src/cli.js",
    "oracle": "src/cli.js",
    "reflector": "bin/reflector"
  },
  "files": [
    "src/",
    "types/",
    "seeds/",
    "bin/",
    "README.md",
    "QUICKSTART.md",
    "LICENSE",
    "action.yml"
  ],
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "test": "node --test --test-timeout=300000 tests/*.test.js",
    "start": "node src/deploy.js",
    "setup": "node src/cli.js seed",
    "dashboard": "node src/cli.js dashboard",
    "cloud": "node src/cli.js cloud start",
    "mcp": "node src/cli.js mcp",
    "seed": "node src/cli.js seed",
    "analytics": "node src/cli.js analytics --json",
    "postinstall": "node -e \"try{require('fs').mkdirSync('.remembrance',{recursive:true})}catch{}\"",
    "dev:cathedral": "npm run dev --workspace=apps/cathedral",
    "build:cathedral": "npm run build --workspace=apps/cathedral"
  },
  "keywords": [
    "ai",
    "code-memory",
    "oracle",
    "coherency",
    "code-retrieval",
    "pattern-library",
    "code-quality",
    "mcp",
    "model-context-protocol",
    "code-search",
    "github-action",
    "ai-tools",
    "developer-tools",
