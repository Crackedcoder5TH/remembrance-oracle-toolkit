    "npx",
    "typescript",
    "plugin"
  ],
  "license": "MIT",
  "author": "Crackedcoder5TH",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crackedcoder5TH/remembrance-oracle-toolkit.git"
